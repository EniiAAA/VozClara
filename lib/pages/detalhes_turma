        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text('Disciplina: ${turma['disciplina']}'),
            // Adicione mais detalhes da turma aqui, se necess√°rio
          ],
        ),
      ),
    );
  }
}
